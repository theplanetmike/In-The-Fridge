<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a7bowersfridge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/fridge"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.a7bowersfridge.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.a7bowersfridge.FridgeItemPagerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.a7bowersfridge.FridgeItemAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.a7bowersfridge.FridgeListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.a7bowersfridge.CameraActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
